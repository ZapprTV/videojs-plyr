{
  "name": "videojs-plyr",
  "version": "1.0.0",
  "description": "A skin for Video.js that makes it look like Plyr.",
  "main": "css/videojs-plyr.min.css",
  "scripts": {
    "build-min": "cross-env NODE_ENV=minify postcss css/videojs-plyr.css --output css/videojs-plyr.min.css",
    "build-legacy": "postcss css/videojs-plyr.css --output css/videojs-plyr.legacy.css",
    "build-legacy-min": "cross-env NODE_ENV=minify postcss css/videojs-plyr.legacy.css --output css/videojs-plyr.legacy.min.css",
    "build-all": "run-s build-min build-legacy build-legacy-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZapprTV/videojs-plyr.git"
  },
  "author": "Francesco Rosi <hi@francescoro.si> (https://francescoro.si)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ZapprTV/videojs-plyr/issues"
  },
  "homepage": "https://videojs-plyr.zappr.stream",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.5",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.2.3"
  },
  "keywords": ["videojs-skin", "videojs", "javascript", "css", "plyr", "player", "video", "audio", "html5", "videojs-theme", "hls", "dash"],
  "files": [
    "css",
    "logo-dark.svg",
    "logo-light.svg",
    "postcss.config.js",
    "README-it.md",
    "README.md"
  ]
}
